<div class= "deposits-styles">
<div> Goat Rental History </div>
  <% if @deposits.size != 0 %>
    <table class="table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Listing title</th>
          <th>Daily price</th>
          <th>Address</th>
        </tr>
      </thead>
      <tbody>
        <% @deposits.each do |deposit| %>
          <tr>
            <td><%= deposit.created_at.localtime.strftime('%d-%m-%Y') %></td>
            <td><%= deposit.created_at.localtime.strftime('%H:%M') %></td>
            <td><%= deposit.listing_title %></td>
            <td><%= number_to_currency(deposit.listing_price.to_i/100.0) %></td>
            <td><%= deposit.address %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  