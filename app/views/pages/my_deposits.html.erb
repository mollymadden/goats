<div class="bg4">
</div>

<div class= "deposits-styles">
  <% if @deposits.size != 0 %>
    <table class="table-striped">
      <thead>
        <tr>
          <th>Timezone</th>
          <th>Date</th>
          <th>Time</th>
          <th>listing title</th>
          <th>listing price</th>
          <th>Quantity</th>
          <th>Total Price</th>
          <th>Shipping address</th>
        </tr>
      </thead>
      <tbody>
        <% @deposits.each do |deposit| %>
          <tr>
            <% total_price = deposit.listing_price.to_i*deposit.quantity.to_i%>
            <td><%= deposit.created_at.localtime.strftime('UTC%:z') %></td>
            <td><%= deposit.created_at.localtime.strftime('%d-%m-%Y') %></td>
            <td><%= deposit.created_at.localtime.strftime('%H:%M') %></td>
            <td><%= deposit.listing_title %></td>
            <td><%= number_to_currency(deposit.listing_price.to_i/100.0) %></td>
            <td><%= deposit.quantity %></td>
            <td><%= number_to_currency(total_price.to_i/100.0) %></td>
            <td><%= deposit.shipping_address %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</p>
</div>
</div>
