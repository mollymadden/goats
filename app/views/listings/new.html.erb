<div class="bg4">
  </div>
    <p id="notice"><%= notice %></p>
      <div class="listing-form-styles">
        <br/>

        <div class="subtext"> Scroll down to manage your previous items. </div>
        <br/>
        <hr/>
        <%= render 'form', listing: @listing %>
        <br>
      </div>

      <% if current_user.listings.length>0 %>
        <div class="deposits-styles" >
          <hr> 
          <h3> Your previous items: </h3>
          <table>
            <thead>
              <tr>
                <th>Modified at</th>
                <th>Goat's name</th>
                <th>Price Per Day</th>
                <th>Breed</th>
                <th>Special Skill</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @listed_listings.each do |listing| %>
                <tr>
                  <td><%= listing.updated_at %></td>
                  <td><%= listing.title %></td>
                  <td><%= listing.price %></td>
                  <td><%= listing.stock %></td>
                  <td><%= listing.skill.title %></td>
                  <td><%= link_to 'Show', listing %></td>
                  <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
                  <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      <% end %>
  </div>
</div>


