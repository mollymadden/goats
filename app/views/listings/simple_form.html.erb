<%= simple_form_for @listing, url: new_listing_path,
  wrapper: :horizontal_form,
  wrapper_mappings: {
    boolean:       :horizontal_boolean,
    check_boxes:   :horizontal_collection,
    date:          :horizontal_multi_select,
    datetime:      :horizontal_multi_select,
    file:          :horizontal_file,
    radio_buttons: :horizontal_collection,
    range:         :horizontal_range,
    time:          :horizontal_multi_select
  } do |f| %>

  <%= f.error_notification %>

  <%= f.input :title, placeholder: "What is your goat's name?", :required => true %>

  <%= f.input :description, placeholder: "Talk about your goat! Personality, star sign", :required => true %>

  <%= f.input :price, :required => true %>

  <%= f.input :skill_id, collection: Skill.all, :required => true %>

  <%= f.input :breed, :required => true %>

  <%= f.input :gender, as: :radio_buttons, :required => true %>

  <%= f.input :notes, :required => true %>

  <%= f.input :drop_off, as: :radio_buttons, :required => true %>

  <%= f.input :image, as: :file, input_html: { accept: 'image/png, image/gif, image/jpg, image/jpeg' } %>


  <%= f.button :submit, class: "btn-primary" %>


<% end %>